{
  "name": "goonee",
  "version": "1.0.0",
  "private": true,
  "description": "Goonee tools and console with docs and PWA.",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:html && npm run lint:css",
    "lint:js": "eslint . --ext .js,.mjs,.cjs",
    "lint:js:fix": "eslint . --ext .js,.mjs,.cjs --fix",
    "lint:html": "htmlhint \"**/*.html\"",
    "lint:css": "stylelint \"**/*.{css,scss}\" --ignore-path \".stylelintignore-temp\"",
    "check": "npm run lint"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "htmlhint": "^1.1.4",
    "stylelint": "^16.7.0",
    "stylelint-config-standard": "^36.0.0"
  },
  "dependencies": {
    "sharp": "^0.34.3"
  }
}
